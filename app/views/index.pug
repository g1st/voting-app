extends layout

block content
  if user
    h1(class="main__greeting") Hello, #{user.username}!

  else
    h1(class="main__greeting") Hey, stranger!
    h2(class="main__text")
      | Vote on existing polls or 
      a(href='/oauth/register') register
      |  and create your own!
  div(class="polls")
    div(class="flex-container" id="all_polls")
  script(src="/scripts/chartjs_all.js" type="text/javascript")
      
