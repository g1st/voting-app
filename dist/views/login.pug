extends layout

block content
  h3(class="main__text") To login please fill up the form below.
  if message
    h3(class="main__text main__text-error")= message
  form(class="form__login", method="post", action="/oauth/login")
    | username
    input(type="text" name="username" value="Mickey")
    br
    | password
    input(type="password" name="password" value="Mouse")
    br
    br
    input(type="submit" value="Submit")
